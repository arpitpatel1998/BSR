		<div id="colorlib-main">
			<div id="get-in-touch" class="colorlib-bg-color">
				<div class="colorlib-narrow-content">
					<div class="row">
						<div class="col-md-6 animate-box" data-animate-effect="fadeInLeft">
							<h2>Your Loans</h2>
						</div>
					</div>
		<%  if ( typeof userdata != 'undefined') {

					%> 
		<% if (userdata.length > 0) { %>
			<% userdata.forEach((row, index) => { %>
					<div class="row">
						<div class="col-md-6 col-md-offset-3 col-md-pull-3 animate-box" data-animate-effect="fadeInLeft">
							<p class="colorlib-lead"> loan type <%=row.loan_type %></p>
							<p class="colorlib-lead"> loan number <% 
																	num=0;
															if(row.loan_title=='a'){ num=1
																}
																else if (row.loan_title=='b'){ num=2} 
																else if(row.loan_title=='c'){ num=3}
																
																else { num=1 }
																
							%>
							<%= num%>
							</p>
							
							<p class="colorlib-lead"> Amount <%=row.loan_amount%></p>
							
							<p class="colorlib-lead"> Installment <%=row.payment_type %></p>
							
							<p class="colorlib-lead">Installment date	<%intstall_date=row.install_date 
												newintstall_date = [(intstall_date.getFullYear()),
													intstall_date.getMonth() + 1, intstall_date.getDate()
												].join('-') + ' ' + [intstall_date.getHours(),
													intstall_date.getMinutes(),
													intstall_date.getSeconds()
													].join(':');%>
													<%=
									newintstall_date%></p>
							
							
							<p class="colorlib-lead">Loan date	<%Loan_date=row.loan_date 
												newlaon_date = [(Loan_date.getFullYear()),
													Loan_date.getMonth() + 1, Loan_date.getDate()
												].join('-') + ' ' + [Loan_date.getHours(),
													Loan_date.getMinutes(),
													Loan_date.getSeconds()
													].join(':');%>
													<%=
									newlaon_date%></p>
							
							<p class="colorlib-lead"> Loan End-date <%End_date=row.duedate 
												newend_date = [(End_date.getFullYear()),
													End_date.getMonth() + 1, End_date.getDate()
												].join('-') + ' ' + [End_date.getHours(),
													End_date.getMinutes(),
													End_date.getSeconds()
													].join(':');%>
													<%=
									newend_date%></p>
									
							<p class="colorlib-lead"> Remain <%= row.l_remain%> </p>		
							
							<p class="colorlib-lead"> Paid <%= row.l_paied%> </p>		
							
							<p class="colorlib-lead"> Actual payment(Must be paid)<%= row.actualpayment%> </p>				
							
						
						</div>
						
					</div>
					<% 
					})
					}else{
						%>
					<p class="colorlib-lead"> NO active loans </p>
					<%}
			
					}
					else {
					%>
					<p class="colorlib-lead"> NO active loans </p>
					<%}
					%>
				</div>
